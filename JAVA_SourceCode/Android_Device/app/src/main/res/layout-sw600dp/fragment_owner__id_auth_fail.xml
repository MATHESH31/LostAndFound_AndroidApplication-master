<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ui.owner.Owner_IdAuthFailFragment"
    android:background="@drawable/testfail" >
    
    <!-- Next & Back Buttons -->
    
    <TextView
       android:id="@+id/owner_IdAuthFailTextView1"
       android:layout_width="fill_parent"
       android:layout_height="40dp"
       android:layout_alignParentTop="true"
       android:layout_alignParentLeft="true"
       android:layout_marginTop="330dp"
       android:layout_marginLeft="0dp"
       android:gravity="center"
       android:textStyle="bold"
       android:text="@string/owner_fail_1"
       android:textSize="25sp" />
    
    <TextView
       android:id="@+id/owner_IdAuthFailTextView2"
       android:layout_width="fill_parent"
       android:layout_height="40dp"
       android:layout_alignParentTop="true"
       android:layout_alignParentLeft="true"
       android:layout_marginTop="360dp"
       android:layout_marginLeft="0dp"
       android:gravity="center"
       android:text="@string/owner_fail_2"
       android:textSize="25sp" />

    <Button
        android:id="@+id/owner_IdAuthFailRequstButton"
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:layout_below="@+id/owner_IdAuthFailTextView2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="104dp"
        android:background="@drawable/button"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center"
        android:text="Request another test"
        android:textSize="20sp"
        android:typeface="serif" />

    <Button
        android:id="@+id/owner_IdAuthFailmyProfileButton"
        android:layout_width="240dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/owner_IdAuthFailRequstButton"
        android:layout_marginBottom="27dp"
        android:layout_marginRight="28dp"
        android:background="@drawable/myprofile"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center"
        android:text="@string/myProfile"
        android:textSize="20sp"
        android:typeface="serif" />

</RelativeLayout>
