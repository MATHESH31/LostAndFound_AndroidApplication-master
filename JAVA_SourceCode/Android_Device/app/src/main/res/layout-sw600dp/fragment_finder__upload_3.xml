<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ui.finder.upload.Finder_Upload_3Fragment"
    android:background="@drawable/blank" >

    <!-- 1. Design questions -->
    <TextView
       android:id="@+id/founder_Upload_3Quetions_1TextView"
       android:layout_width="fill_parent"
       android:layout_height="40dp"
       android:layout_alignParentTop="true"
       android:layout_alignParentLeft="true"
       android:layout_marginTop="140dp"
       android:layout_marginLeft="0dp"
       android:gravity="center"
       android:text="@string/founder_questions_1"
       android:textSize="25sp" />
    
    <TextView
       android:id="@+id/founder_Upload_3Quetions_2TextView"
       android:layout_width="fill_parent"
       android:layout_height="40dp"
       android:layout_alignParentTop="true"
       android:layout_alignParentLeft="true"
       android:layout_marginTop="80dp"
       android:layout_marginLeft="0dp"
       android:gravity="center"
       android:text="@string/founder_questions_2"
       android:textSize="30sp" />
    
    <LinearLayout
          android:orientation="vertical"
          android:layout_width="320dp"
          android:layout_height="600dp"
          android:layout_alignParentTop="true"
          android:layout_alignParentLeft="true"
          android:layout_marginTop="200dp"
          android:layout_marginLeft="20dp"
          >
    
    <!--  2. Question_1 -->
          <TextView 
                android:id="@+id/founder_Upload_3Quetions_3TextView"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
 				android:layout_alignParentTop="true"
 				android:layout_marginTop="10dp"
                android:gravity="center"
                android:textSize="30sp"
                android:text="Question 1"/>

          <EditText
              android:id="@+id/founder_Upload_3Quetions_1EditText"
              android:layout_width="fill_parent"
              android:layout_height="40dp"
              android:layout_margin="36dip"
              android:background="@drawable/input"
              android:ems="10"
              android:singleLine="true" >

              <requestFocus />
          </EditText>

	<!--  2. Question_2 -->

          <TextView
              android:id="@+id/founder_Upload_3Quetions_4TextView"
              android:layout_width="fill_parent"
              android:layout_height="40dp"
              android:gravity="center"
              android:text="Question 2"
              android:textSize="30sp" />

          <EditText 
                android:id="@+id/founder_Upload_3Quetions_2EditText"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:background="@drawable/input"
                android:ems="10"
                android:singleLine="true"
                android:layout_margin="36dip"  
   			    />
	<!--  2. Question_3 -->

          <TextView
              android:id="@+id/founder_Upload_3Quetions_5TextView"
              android:layout_width="fill_parent"
              android:layout_height="40dp"
              android:gravity="center"
              android:text="Question 3"
              android:textSize="30sp" />

          <EditText 
                android:id="@+id/founder_Upload_3Quetions_3EditText"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:background="@drawable/input"
                android:ems="10"
                android:singleLine="true"
                android:layout_margin="36dip"  
   			    />
    </LinearLayout>

    <Button
        android:id="@+id/founder_Upload_3Submit_5Button"
        android:layout_width="200dp"
        android:layout_height="110dp"
        android:background="@drawable/button"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="33dp"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center"
        android:text="@string/submit"
        android:textSize="30sp"
        android:typeface="serif" />
    
</RelativeLayout>
