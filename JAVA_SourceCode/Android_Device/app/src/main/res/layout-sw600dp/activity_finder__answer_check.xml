<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ui.finder.Finder_AnswerCheckActivity" 
    android:background="@drawable/blank_4">
    
    <!-- 1. Pass & Fail Buttons -->
    <Button
        android:id="@+id/founder_AnswerCheckFailButton"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="100dp"
        android:layout_marginLeft="100dp"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center"
        android:background="@drawable/fail" />
    
    <Button
        android:id="@+id/founder_AnswerCheckPassButton"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="100dp"
        android:layout_marginRight="100dp"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center"
        android:background="@drawable/pass" />
    
    <TextView
       android:id="@+id/founder_AnswerCheckfailTextView"
       android:layout_width="100dp"
       android:layout_height="40dp"
       android:layout_alignParentBottom="true"
       android:layout_alignParentLeft="true"
       android:layout_marginBottom="60dp"
       android:layout_marginLeft="100dp"
       android:gravity="center"
       android:text="FAIL"
       android:textSize="25sp" />
    
    <TextView
       android:id="@+id/founder_AnswerCheckpassTextView"
       android:layout_width="100dp"
       android:layout_height="40dp"
       android:layout_alignParentBottom="true"
       android:layout_alignParentRight="true"
       android:layout_marginBottom="60dp"
       android:layout_marginRight="100dp"
       android:gravity="center"
       android:text="PASS"
       android:textSize="25sp" />
    
    <!-- 2. Title -->
    <TextView
       android:id="@+id/founder_AnswerCheckQuetions_1TextView"
       android:layout_width="fill_parent"
       android:layout_height="40dp"
       android:layout_alignParentTop="true"
       android:layout_alignParentLeft="true"
       android:layout_marginTop="160dp"
       android:layout_marginLeft="0dp"
       android:gravity="center"
       android:text="@string/founder_checkAnswer"
       android:textSize="25sp" />
    
    <TextView
       android:id="@+id/founder_AnswerCheckQuetions_2TextView"
       android:layout_width="fill_parent"
       android:layout_height="40dp"
       android:layout_alignParentTop="true"
       android:layout_alignParentLeft="true"
       android:layout_marginTop="100dp"
       android:layout_marginLeft="0dp"
       android:gravity="center"
       android:text="@string/founder_questions_2"
       android:textSize="30sp" />

    <!-- 3. Answer Check Lists -->
    <CheckBox
        android:id="@+id/founder_AnswerCheckcheckBox1"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="260dp"
        android:layout_marginLeft="20dp"
        android:textSize="24dp"
        android:text="Answer 1" />
    
    <CheckBox
        android:id="@+id/founder_AnswerCheckcheckBox2"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="360dp"
        android:layout_marginLeft="20dp"
        android:textSize="24dp"
        android:text="Answer 2" />
    
    <CheckBox
        android:id="@+id/founder_AnswerCheckcheckBox3"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="460dp"
        android:layout_marginLeft="20dp"
        android:textSize="24dp"
        android:text="Answer 3" />
    
    <TextView
        android:id="@+id/founder_AnswerCheckTextView1"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="220dp"
        android:layout_marginLeft="20dp"
        android:textSize="24dp"
        android:gravity="center"
        android:text="Question 1" />
    
    <TextView
        android:id="@+id/founder_AnswerCheckTextView2"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="320dp"
        android:layout_marginLeft="20dp"
        android:textSize="24dp"
        android:gravity="center"
        android:text="Question 2" />
    
    <TextView
        android:id="@+id/founder_AnswerCheckTextView3"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="420dp"
        android:layout_marginLeft="20dp"
        android:textSize="24dp"
        android:gravity="center"
        android:text="Question 3" />
    
    <!-- Hint -->

    <TextView
        android:id="@+id/founder_AnswerCheckHint_1TextView"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="240dp"
        android:gravity="center"
        android:text="Hint: Only those who provides all correct"
        android:textSize="18sp" />
    
    <TextView
        android:id="@+id/founder_AnswerCheckHint_2TextView"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="220dp"
        android:gravity="center"
        android:text="answers can pass this test"
        android:textSize="18sp" />

</RelativeLayout>
