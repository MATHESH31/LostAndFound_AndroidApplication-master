<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ui.owner.Owner_SelectaTagFragment"
    android:background="@drawable/blank_2" >
    
    <!-- Image Buttons Group: common properties -->
<!-- Image Buttons Group: valuable properties -->

    <Button
        android:id="@+id/owner_Taglaptop"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="60dp"
        android:background="@drawable/laptop" />
    
    <TextView
       android:id="@+id/owner_selectaTagTextView"
       android:layout_width="fill_parent"
       android:layout_height="40dp"
       android:layout_alignParentTop="true"
       android:layout_alignParentLeft="true"
       android:layout_marginTop="280dp"
       android:layout_marginLeft="0dp"
       android:gravity="center"
       android:text="@string/selectaTag"
       android:textSize="15sp" />

    <Button
        android:id="@+id/myprofile_4Button"
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="80dp"
        android:background="@drawable/myprofile"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center"
        android:text="@string/myProfile"
        android:textSize="10sp"
        android:typeface="serif" />

    <Button
        android:id="@+id/owner_Tagwatch"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignBaseline="@+id/owner_Tagcamera"
        android:layout_alignBottom="@+id/owner_Tagcamera"
        android:layout_toRightOf="@+id/owner_Taglaptop"
        android:background="@drawable/watch" />

    <Button
        android:id="@+id/owner_Tagearphone"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/owner_selectaTagTextView"
        android:layout_below="@+id/owner_Tagcamera"
        android:background="@drawable/earphone" />

    <Button
        android:id="@+id/owner_Taghandbag"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/owner_Taglaptop"
        android:layout_centerVertical="true"
        android:background="@drawable/handbag" />

    <Button
        android:id="@+id/owner_Tagbankcard"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/owner_selectaTagTextView"
        android:layout_alignTop="@+id/owner_Taghandbag"
        android:layout_marginTop="20dp"
        android:background="@drawable/bankcard" />

    <Button
        android:id="@+id/owner_Tagbook"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignRight="@+id/owner_selectaTagTextView"
        android:layout_below="@+id/owner_Tagwatch"
        android:layout_marginRight="14dp"
        android:background="@drawable/book" />

    <Button
        android:id="@+id/owner_Tagscissors"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_above="@+id/owner_Taghandbag"
        android:layout_alignLeft="@+id/owner_Tagbook"
        android:background="@drawable/scissors" />

    <Button
        android:id="@+id/owner_Tagkeys"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignTop="@+id/owner_Tagwatch"
        android:layout_marginRight="22dp"
        android:layout_marginTop="20dp"
        android:layout_toLeftOf="@+id/owner_Tagbook"
        android:background="@drawable/keys" />

    <Button
        android:id="@+id/owner_Tagcamera"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignBottom="@+id/owner_Taglaptop"
        android:layout_marginBottom="52dp"
        android:layout_toLeftOf="@+id/owner_Taghandbag"
        android:background="@drawable/camera" />

    <Button
        android:id="@+id/owner_Tagstationery"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignBaseline="@+id/owner_Tagbankcard"
        android:layout_alignBottom="@+id/owner_Tagbankcard"
        android:layout_alignLeft="@+id/owner_Tagball"
        android:background="@drawable/stationery" />

    <Button
        android:id="@+id/owner_Tagball"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_above="@+id/owner_Taghandbag"
        android:layout_alignLeft="@+id/owner_Tagkeys"
        android:background="@drawable/ball" />

    <Button
        android:id="@+id/owner_Tagcellphone"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignBaseline="@+id/owner_Tagball"
        android:layout_alignBottom="@+id/owner_Tagball"
        android:layout_alignLeft="@+id/owner_Tagwatch"
        android:background="@drawable/cellphone" />
    
</RelativeLayout>
