<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ui.shared.SignUpFragment"
    android:background="@drawable/signup" >

    <!-- Login Form -->
        <LinearLayout
          android:orientation="vertical"
          android:layout_width="180dp"
          android:layout_height="300dp"
          android:layout_alignParentTop="true"
          android:layout_alignParentLeft="true"
          android:layout_marginTop="40dp"
          android:layout_marginLeft="0dp"
          >
          <!--  Account Label -->
          <TextView 
                android:id="@+id/accountSignUpTextView"
                android:layout_width="fill_parent"
                android:layout_height="30dp"
 				android:layout_alignParentTop="true"
 				android:layout_marginTop="10dp"
                android:gravity="center"
                android:textSize="15sp"
                android:text="@string/accountLogIn"/>

          <EditText
              android:id="@+id/accountSignUpEditText"
              android:layout_width="fill_parent"
              android:layout_height="30dp"
              android:background="@drawable/input"
              android:ems="10"
              android:hint="  Email Adress"
              android:singleLine="true" >

              <requestFocus />
          </EditText>

          <!--  Password Label -->

          <TextView
              android:id="@+id/pwSignUpTextView"
              android:layout_width="fill_parent"
              android:layout_height="30dp"
              android:gravity="center"
              android:text="@string/pwLogIn"
              android:textSize="15sp" />

          <EditText 
                android:id="@+id/pwSignUpEditText"
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:background="@drawable/input"
                android:password="true"
                android:singleLine="true"  
   			    />
          <!--  Retype Password Label -->

          <TextView
              android:id="@+id/pwrSignUpTextView"
              android:layout_width="fill_parent"
              android:layout_height="30dp"
              android:gravity="center"
              android:text="@string/pwSignUp"
              android:textSize="15sp" />

          <EditText 
                android:id="@+id/pwrSignUpEditText"
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:background="@drawable/input"
                android:password="true"
                android:singleLine="true" 
   			    />
          <!--  Contact Information Label -->
          <TextView 
                android:id="@+id/contInfoSignUpTextView"
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:gravity="center"
                android:textSize="15sp"
                android:text="@string/ContactInfo"/>
          <EditText 
                android:id="@+id/contInfoSignUpEditText"
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:background="@drawable/input"
                android:singleLine="true"
                android:hint="  Email / Cellphone"  
   			    />
 
</LinearLayout>
<!-- Login Form Ends -->

    <Button
        android:id="@+id/signUpSubmit_2Button"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:background="@drawable/button"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center"
        android:text="@string/submit"
        android:textSize="15sp"
        android:typeface="serif" />

</RelativeLayout>
