<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ui.finder.Finder_SelectaTagFragment"
    android:background="@drawable/blank" >

    <TextView
       android:id="@+id/finder_selectaTagTextView"
       android:layout_width="fill_parent"
       android:layout_height="40dp"
       android:layout_alignParentTop="true"
       android:layout_alignParentLeft="true"
       android:layout_marginTop="40dp"
       android:layout_marginLeft="0dp"
       android:gravity="center"
       android:text="@string/selectaTag"
       android:textSize="15sp" />

    <Button
        android:id="@+id/finderSelectaTagSubmit_4Button"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:background="@drawable/button"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="0dp"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center"
        android:text="@string/submit"
        android:textSize="15sp"
        android:typeface="serif" />

    <!-- Image Buttons Group: common properties -->

    <Button
        android:id="@+id/finder_Tagscissors"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="180dp"
        android:layout_marginRight="50dp"
        android:background="@drawable/scissors" />
<!-- Image Buttons Group: valuable properties -->
    
    <!-- Create a new tag -->
    <TextView 
         android:id="@+id/finder_tagNotFoundTextView"
         android:layout_width="fill_parent"
         android:layout_height="30dp"
 	     android:layout_alignParentBottom="true"
         android:layout_alignParentLeft="true"
         android:layout_marginBottom="120dp"
         android:layout_marginLeft="0dp"
         android:textSize="12sp"
         android:text="@string/finder_tagNotFound"/>

   <TextView
       android:id="@+id/finder_createaTagTextView"
       android:layout_width="150dp"
       android:layout_height="30dp"
       android:layout_alignParentBottom="true"
       android:layout_alignParentLeft="true"
       android:layout_marginBottom="100dp"
       android:layout_marginLeft="0dp"
       android:text="@string/finder_createaTag"
       android:textSize="15sp" />

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="50dp" 
        android:layout_marginRight="20dp"
        android:contentDescription="@string/finder_value" >
    
    <RadioButton
       android:id="@+id/finder_valuablePropertyRadioButton"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="@string/finder_valuablePropertyRadioButton"/>
    
    <RadioButton
       android:id="@+id/finder_commonPropertyRadioButton"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="@string/finder_commonPropertyRadioButton" />
    
    </RadioGroup>

    <Button
        android:id="@+id/finder_Taglaptop"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/finder_selectaTagTextView"
        android:layout_below="@+id/finder_selectaTagTextView"
        android:background="@drawable/laptop" />

    <Button
        android:id="@+id/finder_Tagkeys"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignBaseline="@+id/finder_Tagcellphone"
        android:layout_alignBottom="@+id/finder_Tagcellphone"
        android:layout_alignLeft="@+id/finder_Tagscissors"
        android:background="@drawable/keys" />

    <EditText
        android:id="@+id/finder_createaTagEditText"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:layout_alignLeft="@+id/finder_tagNotFoundTextView"
        android:layout_alignTop="@+id/finder_tagNotFoundTextView"
        android:layout_marginTop="50dp"
        android:background="@drawable/input"
        android:ems="10"
        android:hint="    Key words Only"
        android:singleLine="true"
        android:textSize="10sp" >

        <requestFocus />
    </EditText>

    <Button
        android:id="@+id/finder_Tagbook"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignRight="@+id/finder_tagNotFoundTextView"
        android:layout_below="@+id/finder_Tagstationery"
        android:background="@drawable/book" />

    <Button
        android:id="@+id/finder_Tagbankcard"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_above="@+id/finder_Tagwatch"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="14dp"
        android:background="@drawable/bankcard" />

    <Button
        android:id="@+id/finder_Tagstationery"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_above="@+id/finder_Tagearphone"
        android:layout_toLeftOf="@+id/finderSelectaTagSubmit_4Button"
        android:background="@drawable/stationery" />

    <Button
        android:id="@+id/finder_Tagwatch"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignBottom="@+id/finder_Tagstationery"
        android:layout_alignLeft="@+id/finder_Tagcellphone"
        android:layout_marginBottom="14dp"
        android:background="@drawable/watch" />

    <Button
        android:id="@+id/finder_Tagcamera"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignBaseline="@+id/finder_Tagwatch"
        android:layout_alignBottom="@+id/finder_Tagwatch"
        android:layout_alignLeft="@+id/finder_Taglaptop"
        android:background="@drawable/camera" />

    <Button
        android:id="@+id/finder_Taghandbag"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/finder_Tagcamera"
        android:layout_centerVertical="true"
        android:background="@drawable/handbag" />

    <Button
        android:id="@+id/finder_Tagearphone"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="16dp"
        android:layout_toRightOf="@+id/finder_Taghandbag"
        android:background="@drawable/earphone" />

    <Button
        android:id="@+id/finder_Tagcellphone"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignBaseline="@+id/finder_Tagbankcard"
        android:layout_alignBottom="@+id/finder_Tagbankcard"
        android:layout_alignLeft="@+id/finder_Tagearphone"
        android:background="@drawable/cellphone" />

    <Button
        android:id="@+id/finder_Tagball"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignBaseline="@+id/finder_Tagwatch"
        android:layout_alignBottom="@+id/finder_Tagwatch"
        android:layout_alignRight="@+id/radioGroup"
        android:background="@drawable/ball" />
    
</RelativeLayout>
