<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ui.shared.LogInFragment"
    android:background="@drawable/login" >
    
    <!-- Login Form -->
        <LinearLayout
          android:orientation="vertical"
          android:layout_width="200dp"
          android:layout_height="300dp"
          android:layout_alignParentTop="true"
          android:layout_alignParentLeft="true"
          android:layout_marginTop="50dp"
          android:layout_marginLeft="0dp"
          >
          <!--  Account Label -->
          <TextView 
                android:id="@+id/accountLogInTextView"
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:gravity="center"
                android:textSize="15sp"
                android:text="@string/accountLogIn"/>
          <EditText 
                android:id="@+id/accountLogInEditText"
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:background="@drawable/input"
                android:singleLine="true"
                android:layout_margin="15dip"
                android:hint="  Email Adress"  
   			    />
          <!--  Password Label -->

          <TextView
              android:id="@+id/pwLogInTextView"
              android:layout_width="fill_parent"
              android:layout_height="30dp"
              android:gravity="center"
              android:text="@string/pwLogIn"
              android:textSize="15sp" />

          <EditText 
                android:id="@+id/pwLogInEditText"
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:background="@drawable/input"
                android:password="true"
                android:singleLine="true"
                android:layout_margin="15dip"  
   			    />
        
          <!-- Link to Registration Screen -->

        </LinearLayout>
<!-- Login Form Ends -->

    <Button
        android:id="@+id/logInSubmit_2Button"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="40dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50dp"
        android:background="@drawable/button"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center"
        android:text="@string/submit"
        android:textSize="15sp"
        android:typeface="serif" />

</RelativeLayout>
