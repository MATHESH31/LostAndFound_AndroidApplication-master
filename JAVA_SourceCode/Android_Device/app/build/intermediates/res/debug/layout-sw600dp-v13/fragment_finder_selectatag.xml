<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ui.finder.Finder_SelectaTagFragment"
    android:background="@drawable/blank" >

    <TextView
       android:id="@+id/finder_selectaTagTextView"
       android:layout_width="fill_parent"
       android:layout_height="40dp"
       android:layout_alignParentTop="true"
       android:layout_alignParentLeft="true"
       android:layout_marginTop="80dp"
       android:layout_marginLeft="30dp"
       android:gravity="center"
       android:text="Select a category by clicking the image"
       android:textSize="25sp" />

    <Button
        android:id="@+id/finderSelectaTagSubmit_4Button"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:background="@drawable/button"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="35dp"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center"
        android:text="@string/submit"
        android:textSize="30sp"
        android:typeface="serif" />

    <!-- Image Buttons Group: common properties -->

    <Button
        android:id="@+id/finder_Tagscissors"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="180dp"
        android:layout_marginRight="50dp"
        android:background="@drawable/scissors" />
    
    <Button
        android:id="@+id/finder_Tagbook"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="300dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/book" />

    <Button
        android:id="@+id/finder_Tagkeys"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="270dp"
        android:layout_marginRight="130dp"
        android:background="@drawable/keys" />

    <Button
        android:id="@+id/finder_Tagball"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="360dp"
        android:layout_marginRight="220dp"
        android:background="@drawable/ball" />

    <Button
        android:id="@+id/finder_Tagstationery"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="380dp"
        android:layout_marginRight="120dp"
        android:background="@drawable/stationery" />
<!-- Image Buttons Group: valuable properties -->

    <Button
        android:id="@+id/finder_Tagearphone"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="230dp"
        android:layout_marginLeft="50dp"
        android:background="@drawable/earphone" />
    
    <Button android:id="@+id/finder_Tagbankcard" 
        android:layout_width="80dp" 
        android:layout_height="80dp" 
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="220dp"
        android:layout_marginLeft="240dp"
        android:background="@drawable/bankcard"/>
    
    <Button
        android:id="@+id/finder_Tagcamera"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="130dp"
        android:layout_marginLeft="260dp"
        android:background="@drawable/camera" />

    <Button
        android:id="@+id/finder_Taghandbag"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="350dp"
        android:layout_marginLeft="30dp"
        android:background="@drawable/handbag" />

    <Button
        android:id="@+id/finder_Tagcellphone"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="280dp"
        android:layout_marginLeft="140dp"
        android:background="@drawable/cellphone" />

    <Button
        android:id="@+id/finder_Tagwatch"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="150dp"
        android:layout_marginLeft="160dp"
        android:background="@drawable/watch" />

    <Button
        android:id="@+id/finder_Taglaptop"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="130dp"
        android:layout_marginLeft="60dp"
        android:background="@drawable/laptop" />
    
    <!-- Create a new tag -->
    <TextView 
         android:id="@+id/finder_tagNotFoundTextView"
         android:layout_width="fill_parent"
         android:layout_height="40dp"
 	     android:layout_alignParentBottom="true"
         android:layout_alignParentLeft="true"
         android:layout_marginBottom="260dp"
         android:layout_marginLeft="30dp"
         android:textSize="18sp"
         android:text="@string/finder_tagNotFound"/>

   <TextView
       android:id="@+id/finder_createaTagTextView"
       android:layout_width="300dp"
       android:layout_height="40dp"
       android:layout_alignParentBottom="true"
       android:layout_alignParentLeft="true"
       android:layout_marginBottom="230dp"
       android:layout_marginLeft="30dp"
       android:text="@string/finder_createaTag"
       android:textSize="30sp" />
   
   <EditText
       android:id="@+id/finder_createaTagEditText"
       android:layout_width="300dp"
       android:layout_height="50dp"
       android:layout_alignParentBottom="true"
       android:layout_alignParentLeft="true"
       android:layout_marginBottom="170dp"
       android:layout_marginLeft="30dp"
       android:background="@drawable/input"
       android:ems="10"
       android:hint="    Key words Only"
       android:singleLine="true" >

       <requestFocus />
   </EditText>

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="170dp" 
        android:layout_marginRight="80dp"
        android:contentDescription="@string/finder_value" >
    
    <RadioButton
       android:id="@+id/finder_valuablePropertyRadioButton"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="@string/finder_valuablePropertyRadioButton" />
    
    <RadioButton
       android:id="@+id/finder_commonPropertyRadioButton"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="@string/finder_commonPropertyRadioButton" />
    
    </RadioGroup>
    
</RelativeLayout>
